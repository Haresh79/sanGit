<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/P_theme"
    android:orientation="vertical"
    tools:context=".collectionFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/uicolor2"
        android:layout_margin="10dp"
        android:text="Artist"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp">
    <LinearLayout
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transc_theme"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/a1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:text="Arijit Singh"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transc_theme"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/a2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                     />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Shreya Ghoshal"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transc_theme"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/a3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                     />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Sonu Nigam"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transc_theme"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/a4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Neha Kakkar"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/transc_theme"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/a5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Armaan Malik"/>
        </LinearLayout>

    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/uicolor2"
        android:layout_margin="10dp"
        android:text="Language"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <androidx.cardview.widget.CardView
             android:id="@+id/c1"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="20dp"
             app:cardBackgroundColor="#cdb4db">
             <TextView
                 android:text="Hindi"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/c2"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="20dp"
             app:cardBackgroundColor="#ffc8dd">
             <TextView
                 android:text="English"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/c3"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="20dp"
             app:cardBackgroundColor="#ffafcc">
             <TextView
                 android:text="Panjabi"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/c4"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="20dp"
             app:cardBackgroundColor="#bde0fe">
             <TextView
                 android:text="Telugu"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:id="@+id/c5"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="10dp"
             app:cardCornerRadius="20dp"
             app:cardBackgroundColor="#bde0fe">
             <TextView
                 android:text="Tamil"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"/>
         </androidx.cardview.widget.CardView>

     </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
</FrameLayout>